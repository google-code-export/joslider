<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>joSlider</name>
	<author>Matthieu BARBE</author>
	<creationdate>15/09/2010</creationdate>
	<copyright>Copyright (C) 2005 - 2009 CCC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authoremail>matthieu@ccomca.com</authoremail>
	<authorurl>www.ccomca.com</authorurl>
	<version>1.0</version>
	<description>Permet d'afficher le script slidedeck</description>
	<files>
		<filename module="mod_joslider">mod_joslider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl/</folder>
		<folder>assets/</folder>
		<folder>elements</folder>
	</files>
	<params addpath="/modules/mod_joslider/elements">
		
		
		<param name="@josliderhead" type="josliderhead" default="VERSION CHECK" icon="update.png" />
		<param  type="versioncheck" />
		<param name="@josliderhelp" type="josliderhelp" default="LIST HELP" icon="lightbulb.png" />
		
		<param name="@josliderhead" type="josliderhead" default="CONTENT PARAMETERS" icon="description.png" />
		
		<param name="content_type" type="list" default="joomla" label="Type de contenu" description="Type de contenu">
			<option value="joomla">Contenu de Joomla</option>
		</param>
		
		<param name="secid" type="section" default="" label="Section" description="" />
		<param name="catid" type="category" default="" label="Catégorie" description="" />
		
		<param name="article_count" type="text" default="4" label="Nombre maxi d'articles" description="" />
		<param name="itemsOrdering" type="list" default="" label="Ordre des articles" description="">
			<option value="">Défaut</option>
			<option value="aleatoire">Aléatoire</option>
			<option value="date">Les plus vieus en premier</option>
			<option value="rdate">Les plus récents en premier</option>
			<option value="order">Ordre</option>
		</param>
		
		<param name="user_id" type="list" default="0" label="Auteur" description="">
			<option value="0">N'importe qui</option>
			<option value="by_me">Ajouté ou modifié par moi</option>
			<option value="not_me">Non ajouté par moi</option>
		</param>
		<param name="show_article_title" type="radio" default="1" label="Afficher le titre" description="">
			<option value="1">Oui</option>
			<option value="0">Non</option>
		</param>
		
		
		<param name="@josliderhead" type="josliderhead" default="SLIDEDECK_PARAMETER" icon="cog.png" />
		
		<param name="slidedeck_pro" type="radio" default="0" label="USE_SLIDEDECK_PRO" description="">
			<option value="1">Oui</option>
			<option value="0">Non</option>
		</param>
		
		<param name="slidedeck_pro_directory" type="text" size="45" default="modules/mod_jslidedeck/assets/js/pro/slidedeck.jquery.js" label="LOCATE_SLIDEDECK_PRO_SCRIPT" description="" />
		
		<param name="width_slide" type="text" default="900" label="Largeur du slide" description="" />
		<param name="height_slide" type="text" default="300" label="Hauteur du slide" description="" />
		<param name="load_jquery" type="radio" default="1" label="LOAD_JQUERY" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="load_mousewheel" type="radio" default="1" label="LOAD_MOUSE_WHEEL" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		
		<param name="vertical_slide" type="radio" default="1" label="VERTICAL_SLIDE" description="VERTICAL_SLIDE_PRO">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		
		<param name="@josliderhelp" type="josliderhelp" default="VERTICAL_SLIDE_HELP" icon="lightbulb.png" />
		
		<param name="speed" type="text"  default="500" label="SPEED" description="SPEED_DESCRIPTION" />
		<param name="start" type="text"  default="1" label="START" description="START_DESCRIPTION" />
		<param name="index" type="radio" default="1" label="INDEX" description="INDEX_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		
		<param name="custom_index" type="text" size="45"  default="" label="CUSTOM_INDEX" description="CUSTOM_INDEX_DESCRIPTION" />
		<param name="@josliderhelp" type="josliderhelp" default="CUSTOM_INDEX_HELP" icon="lightbulb.png" />
		
		<param name="@josliderhead" type="josliderhead" default="THEMES_PARAMETER" icon="css.png" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="skin" type="list" default="default" label="USE_SKIN" description="USE_SKIN_DESCRIPTION">
			<option value="default">By Slidedeck</option>
			<option value="literally">Literally by Megan Taylor</option>
		</param>
		
	</params>
	<params group="advanced">
		<param name="cache" type="hidden" default="0" />
		<param name="module_cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>