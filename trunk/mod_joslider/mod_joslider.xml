<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>joSlider</name>
	<author>Matthieu BARBE</author>
	<creationdate>15/09/2010</creationdate>
	<copyright>Copyright (C) 2005 - 2009 CCC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authoremail>matthieu@ccomca.com</authoremail>
	<authorurl>www.ccomca.com</authorurl>
	<version>1.0</version>
	<description>Permet d'afficher le script slidedeck</description>
	<files>
		<filename module="mod_joslider">mod_joslider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl/</folder>
		<folder>assets/</folder>
		<folder>elements</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_joslider.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_joslider.ini</language>
	</languages>
	<params addpath="/modules/mod_joslider/elements">
		
		
		<param name="@josliderhead" type="josliderhead" default="VERSION_CHECK" icon="update.png" />
		<param  type="versioncheck" />
		<param name="@josliderhead" type="josliderhead" default="CONTENT_PARAMETERS" icon="description.png" />
		
		<param name="content_type" type="list" default="joomla" label="TYPE_CONTENT" description="TYPE_CONTENT_DESCRIPTION">
			<option value="joomla">JOOMLA_CONTENT</option>
		</param>
		
		<param name="secid" type="section" default="" label="SECTION" description="" />
		<param name="catid" type="category" default="" label="CATEGORY" description="" />
		
		
		<param name="itemsOrdering" type="list" default="" label="ARTICLES_ORDER" description="">
			<option value="">DEFAULT</option>
			<option value="random">RANDOM</option>
			<option value="date">OLDEST_FIRST</option>
			<option value="rdate">MOST_RECENT_FIRST</option>
			<option value="order">ORDER</option>
		</param>
		<param name="show_front" type="radio" default="1" label="SHOW_FRONT" description="SHOW_FRONT_DESCRIPTION">
			<option value="1">SHOW</option>
			<option value="0">HIDE</option>
			<option value="2">ONLY_FRONTPAGE_ITEM</option>
		</param>
		
		<param name="@josliderhead" type="josliderhead" default="SLIDEDECK_PARAMETER" icon="cog.png" />
		
		<param name="id_slidedeck" type="text" default="slidedeck_frame" label="ID_SLIDEDECK" description="ID_SLIDEDECK_DESCRIPTION" />
		
		<param name="slidedeck_pro" type="radio" default="0" label="USE_SLIDEDECK_PRO" description="">
			<option value="1">Oui</option>
			<option value="0">Non</option>
		</param>
		
		<param name="slidedeck_pro_directory" type="text" size="45" default="modules/mod_joslider/assets/js/pro/slidedeck.jquery.js" label="LOCATE_SLIDEDECK_PRO_SCRIPT" description="" />
		<param name="tab_count" type="text" default="4" label="TAB_COUNT" description="TAB_COUNT_DESCRIPTION" />
		<param name="width_slide" type="text" default="900" label="WIDTH" description="" />
		<param name="height_slide" type="text" default="300" label="HEIGHT" description="" />
		<param name="load_jquery" type="radio" default="1" label="LOAD_JQUERY" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="load_mousewheel" type="radio" default="1" label="LOAD_MOUSE_WHEEL" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		
		<param name="vertical_slide" type="radio" default="1" label="VERTICAL_SLIDE_PRO" description="VERTICAL_SLIDE_PRO_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		
		<param name="@josliderhelp" type="josliderhelp" default="VERTICAL_SLIDE_HELP" icon="lightbulb.png" />
		
		<param name="speed" type="text"  default="500" label="SPEED" description="SPEED_DESCRIPTION" />
		<param name="start" type="text"  default="1" label="START" description="START_DESCRIPTION" />
		<param name="index" type="radio" default="1" label="INDEX" description="INDEX_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="custom_index" type="text" size="45"  default="" label="CUSTOM_INDEX" description="CUSTOM_INDEX_DESCRIPTION" />
		<param name="@josliderhelp" type="josliderhelp" default="CUSTOM_INDEX_HELP" icon="lightbulb.png" />
		<param name="scroll" type="radio" default="1" label="SCROLL" description="SCROLL_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="keys" type="radio" default="1" label="KEYS" description="KEYS_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="activeCorner" type="radio" default="1" label="ACTIVE_CORNER" description="ACTIVE_CORNER_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="hideSpines" type="radio" default="0" label="HIDE_SPINES" description="HIDE_SPINES_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="autoPlay" type="radio" default="0" label="AUTO_PLAY" description="AUTO_PLAY_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="autoPlayInterval" type="text"  default="5000" label="AUTO_PLAY_INTERVAL" description="AUTO_PLAY_INTERVAL_DESCRIPTION" />
		<param name="cycle" type="radio" default="0" label="CYCLE" description="CYCLE_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="@josliderhead" type="josliderhead" default="THEMES_PARAMETER" icon="css.png" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="skin" type="list" default="default" label="USE_SKIN" description="USE_SKIN_DESCRIPTION">
			<option value="default">SLIDEDECK</option>
			<option value="voyager">VOYAGER</option>
			<option value="invasion">INVASION</option>
			<option value="literally">LITERALLY</option>
			<option value="stitch">STITCH</option>
			<option value="ribbons">RIBBONS</option>
		</param>
		<param name="custom_theme" type="radio" default="0" label="CUSTOM_THEME" description="CUSTOM_THEME_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="theme_repertory" type="text" size="45" default="/modules/mod_joslider/assets/css/template/custom/" label="THEME_REPERTORY" description="THEME_REPERTORY_DESCRIPTION" />
		<param name="@josliderhelp" type="josliderhelp" default="ATTENTION_SLASH_HELP" icon="attention.png" />
		
		<param name="theme_class" type="text"  default="custom" label="THEME_CLASS" description="THEME_CLASS_DESCRIPTION" />
		
		<param name="skin_theme" type="text"  default="" label="SKIN_CUSTOM" description="SKIN_CUSTOM_DESCRIPTION" />
		
		<param name="skin_ie" type="text"  default="" label="SKIN_CUSTOM_IE" description="SKIN_CUSTOM_IE_DESCRIPTION" />
		
		<param name="skin_ie6" type="text"  default="" label="SKIN_CUSTOM_IE6" description="SKIN_CUSTOM_IE6_DESCRIPTION" />
		
		<param name="skin_ie7" type="text"  default="" label="SKIN_CUSTOM_IE7" description="SKIN_CUSTOM_IE7_DESCRIPTION" />
		
		<param name="skin_ie8" type="text"  default="" label="SKIN_CUSTOM_IE8" description="SKIN_CUSTOM_IE8_DESCRIPTION" />
		
		<param name="cufonRefresh" type="radio" default="0" label="CUFON_REFRESH" description="CUFON_REFRESH_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param name="cufon_font" type="text" size="45" default="modules/mod_joslider/assets/js/font/Rawengulk_700.font.js" label="CUFON_FONT" description="CUFON_FONT_DESCRIPTION" />
		
	</params>
	<params group="advanced">
		<param name="cache" type="hidden" default="0" />
		<param name="module_cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>