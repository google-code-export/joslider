<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6" method="upgrade">
	<name>joSlider</name>
	<author>Matthieu BARBE</author>
	<creationdate>18/10/2010</creationdate>
	<copyright>Copyright (C) 2005 - 2009 CCC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authoremail>matthieu@ccomca.com</authoremail>
	<authorurl>www.ccomca.com</authorurl>
	<version>1.1.1</version>
	<description>JOSLIDER_DESCRIPTION</description>
	<files>
		<filename module="mod_joslider">mod_joslider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl/</folder>
		<folder>assets/</folder>
		<folder>elements</folder>
		<folder>library</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_joslider.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.mod_joslider.ini</language>
	</languages>
	
<config>
	<fields name="params" addfieldpath="/modules/mod_joslider/fields">
	 <fieldset name="JOSLIDER_VERSION_CHECK" >
		<field  type="versioncheck"/>
	</fieldset>
	<fieldset name="JOSLIDER_CONTENT_PARAMETERS">
		<field name="content_type" type="list" default="joomla" label="JOSLIDER_TYPE_CONTENT" description="JOSLIDER_TYPE_CONTENT_DESCRIPTION">
			<option value="joomla">JOSLIDER_JOOMLA_CONTENT</option>
		</field>
		<field name="catid" type="category" default="" label="Joomla Category" description="" extension="com_content" />
		<field name="itemsOrdering" type="list" default="" label="JOSLIDER_ARTICLES_ORDER" description="">
			<option value="">JOSLIDER_DEFAULT</option>
			<option value="random">JOSLIDER_RANDOM</option>
			<option value="date">JOSLIDER_OLDEST_FIRST</option>
			<option value="rdate">JOSLIDER_MOST_RECENT_FIRST</option>
			<option value="alpha">JOSLIDER_TITLE_ALPHABETICAL</option>
          	<option value="ralpha">JOSLIDER_TITLE_REVERSE_ALPHABETICAL</option>
			<option value="order">JOSLIDER_ORDER</option>
		</field>
		<field name="show_front" type="radio" default="1" label="JOSLIDER_SHOW_FRONT" description="JOSLIDER_SHOW_FRONT_DESCRIPTION">
			<option value="1">JOSLIDER_SHOW</option>
			<option value="0">JOSLIDER_HIDE</option>
			<option value="2">JOSLIDER_ONLY_FRONTPAGE_ITEM</option>
		</field>
	</fieldset>
	<fieldset name="JOSLIDER_TITLE_PARAMETER">
		<field name="truncateTitle" type="text" default="0" label="JOSLIDER_TRUNCATE_TITLE" description="JOSLIDER_TRUNCATE_TITLE_DESCRIPTION" ></field>
	</fieldset>
	<fieldset name="JOSLIDER_TEXT_PARAMETER">
		<field name="truncateText" type="text" default="0" label="JOSLIDER_TRUNCATE_TEXT" description="JOSLIDER_TRUNCATE_TEXT_DESCRIPTION" ></field>
		<field name="displayReadMore" type="radio" default="1" label="JOSLIDER_DISPLAY_READ_MORE" description="JOSLIDER_DISPLAY_READ_MORE_DESCRIPTION">
			<option value="1">JOSLIDER_YES</option>
			<option value="0">JOSLIDER_NO</option>
		</field>
		<field name="textReadMore" type="text" default="" label="JOSLIDER_TEXT_READ_MORE" description="JOSLIDER_TEXT_READ_MORE_DESCRIPTION" ></field>
		<field name="target" type="list" default="_parent" label="JOSLIDER_TARGET_LINK" >
			<option value="_parent">JOSLIDER_PARENT</option>
			<option value="_blank">JOSLIDER_BLANK</option>
		</field>
	</fieldset>
	<fieldset name="JOSLIDER_SLIDEDECK_PARAMETER">
		<field name="id_slidedeck" type="text" default="slidedeck_frame" label="JOSLIDER_ID_SLIDEDECK" description="JOSLIDER_ID_SLIDEDECK_DESCRIPTION" ></field>
		
		<field name="slidedeck_pro" type="radio" default="0" label="JOSLIDER_USE_SLIDEDECK_PRO" description="JOSLIDER_USE_SLIDEDECK_PRO_DESCRIPTION">
			<option value="1">JOSLIDER_YES</option>
			<option value="0">JOSLIDER_NO</option>
		</field>
		<field   type="josliderhelp" default="JOSLIDER_SLIDEDECK_PRO_HELP" icon="add.png" />
		<field name="slidedeck_pro_directory" type="text" size="45" default="modules/mod_joslider/assets/js/pro/slidedeck.jquery.js" label="JOSLIDER_LOCATE_SLIDEDECK_PRO_SCRIPT" description="" ></field>
		<field name="tab_count" type="text" default="4" label="TAB_COUNT" description="TAB_COUNT_DESCRIPTION" ></field>
		<field name="width_slide" type="text" default="900" label="WIDTH" description="" ></field>
		<field name="height_slide" type="text" default="300" label="HEIGHT" description="" ></field>
		<field name="load_jquery" type="radio" default="1" label="LOAD_JQUERY" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="load_mousewheel" type="radio" default="1" label="LOAD_MOUSE_WHEEL" description="">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		
		<field name="vertical_slide" type="radio" default="1" label="VERTICAL_SLIDE_PRO" description="VERTICAL_SLIDE_PRO_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field   type="josliderhelp" default="VERTICAL_SLIDE_HELP" icon="lightbulb.png" ></field>
		<field name="speed" type="text"  default="500" label="SPEED" description="SPEED_DESCRIPTION" ></field>
		<field name="start" type="text"  default="1" label="START" description="START_DESCRIPTION" ></field>
		<field name="index" type="radio" default="1" label="INDEX" description="INDEX_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="custom_index" type="text" size="45"  default="" label="CUSTOM_INDEX" description="CUSTOM_INDEX_DESCRIPTION" ></field>
		<field   type="josliderhelp" default="CUSTOM_INDEX_HELP" icon="lightbulb.png" ></field>
		<field name="scroll" type="radio" default="1" label="SCROLL" description="SCROLL_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="keys" type="radio" default="1" label="KEYS" description="KEYS_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="activeCorner" type="radio" default="1" label="ACTIVE_CORNER" description="ACTIVE_CORNER_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="hideSpines" type="radio" default="0" label="HIDE_SPINES" description="HIDE_SPINES_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="autoPlay" type="radio" default="0" label="AUTO_PLAY" description="AUTO_PLAY_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="autoPlayInterval" type="text"  default="5000" label="AUTO_PLAY_INTERVAL" description="AUTO_PLAY_INTERVAL_DESCRIPTION" ></field>
		<field name="cycle" type="radio" default="0" label="CYCLE" description="CYCLE_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		</fieldset>
		<fieldset name="THEMES_PARAMETER">
		<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" ></field>
		<field name="skin_type" type="list" default="default" label="SKIN_TYPE" description="SKIN_TYPE_DESCRIPTION">
			<option value="normal">NORMAL</option>
			<option value="smart">SMART</option>
		</field>
		<field name="skin" type="list" default="default" label="USE_SKIN" description="USE_SKIN_DESCRIPTION">
			<option value="default">SLIDEDECK</option>
			<option value="voyager">VOYAGER</option>
			<option value="invasion">INVASION</option>
			<option value="literally">LITERALLY</option>
			<option value="stitch">STITCH</option>
			<option value="ribbons">RIBBONS</option>
		</field>
		
		
		
		<field name="custom_theme" type="radio" default="0" label="CUSTOM_THEME" description="CUSTOM_THEME_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="theme_repertory" type="text" size="45" default="/modules/mod_joslider/assets/css/template/custom/" label="THEME_REPERTORY" description="THEME_REPERTORY_DESCRIPTION" ></field>
		<field   type="josliderhelp" default="ATTENTION_SLASH_HELP" icon="attention.png" ></field>
		
		<field name="theme_class" type="text"  default="custom" label="THEME_CLASS" description="THEME_CLASS_DESCRIPTION" ></field>
		
		<field name="skin_theme" type="text"  default="" label="SKIN_CUSTOM" description="SKIN_CUSTOM_DESCRIPTION" ></field>
		
		<field name="skin_ie" type="text"  default="" label="SKIN_CUSTOM_IE" description="SKIN_CUSTOM_IE_DESCRIPTION" ></field>
		
		<field name="skin_ie7" type="text"  default="" label="SKIN_CUSTOM_IE7" description="SKIN_CUSTOM_IE7_DESCRIPTION" ></field>
		
		<field name="skin_ie8" type="text"  default="" label="SKIN_CUSTOM_IE8" description="SKIN_CUSTOM_IE8_DESCRIPTION" ></field>
		<field name="skinjs" type="text"  default="" label="SKIN_JS" description="SKIN_JS_DESCRIPTION" ></field>
		<field   type="josliderhelp" default="CUSTOM_THEME_HELP" icon="lightbulb.png" ></field>
		</fieldset>
		<fieldset name="SMART_PARAMETER">
		<field name="skinSmart" type="list" default="smart" label="USE_SKIN_SMART" description="USE_SKIN_SMART_DESCRIPTION">
			<option value="smart">Default</option>
		</field>
		<field name="dateType" type="list" default="dateCreation" label="DATE_TYPE" description="DATE_TYPE_DESCRIPTION">
			<option value="dateCreation">DATE_CREATION</option>
			<option value="dateModification">DATE_MODIFICATION</option>
			<option value="dateNone">NO_DATE</option>
		</field>
		<field name="dateFormat" type="list" default="DATE_FORMAT_LC" label="DATE_FORMAT" >
			<option value="DATE_FORMAT_LC">DATE_FORMAT_LC</option>
			<option value="DATE_FORMAT_LC1">DATE_FORMAT_LC1</option>
			<option value="DATE_FORMAT_LC2">DATE_FORMAT_LC2</option>
			<option value="DATE_FORMAT_LC3">DATE_FORMAT_LC3</option>
			<option value="DATE_FORMAT_LC4">DATE_FORMAT_LC4</option>
			<option value="DATE_FORMAT_JS1">DATE_FORMAT_JS1</option>
		</field>
		<field name="extractImage" type="radio" default="1" label="EXTRACT_IMAGE" description="EXTRACT_IMAGE_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="thumbSize" type="text"  default="90" label="THUMB_SIZE" description="THUMB_SIZE_DESCRIPTION"  ></field>
		
		
		<field name="typeNavigation" type="list" default="post-titles" label="TYPE_NAVIGATION" >
			<option value="post-titles">TITLE</option>
			<option value="dates">DATES</option>
			<option value="simple-dots">SIMPLE_DOTS</option>
		</field>
		</fieldset>
		<fieldset name="FONT_PARAMETER">
		<field name="cufonRefresh" type="radio" default="0" label="CUFON_REFRESH" description="CUFON_REFRESH_DESCRIPTION">
			<option value="1">YES</option>
			<option value="0">NO</option>
		</field>
		<field name="cufon_font" type="text" size="45" default="modules/mod_joslider/assets/js/font/Rawengulk_700.font.js" label="CUFON_FONT"  ></field>
		<field   type="josliderhelp" default="CUFON_FONT_HELP" icon="lightbulb.png" ></field>
	</fieldset>
	<fieldset name="advanced">
		<field name="cache" type="hidden" default="0" ></field>
		<field name="module_cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</field>
		<field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" ></field>
	
	 </fieldset>
	</fields>
</config>
</extension>